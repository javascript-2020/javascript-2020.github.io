

  {

  
        "manifest_version"                        : 3,
        
        "name"                                    : "js",
        "version"                                 : "1.0.0",
        
        "icons"                                   : {"48":"js.png"},
        
        "background"                              : {"service_worker":"extension.js"},
        
        "permissions"                             : ["scripting","activeTab"],
        
        "host_permissions"                        : ["<all_urls>"],
        
        "action"                                  : {"default_popup":"popup/popup.html","default_icon":{"48":"js.png"}},

        "content_scripts"                         : [{
                                                          "matches"   : ["https://*.example.com/*"],
                                                          "js"        : ["content-script.js"],
                                                          "run_at"    : "document_end"
                                                    }]

        
  }
        
        
        
